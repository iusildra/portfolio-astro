---
type LinkClass = "outline";
interface Props {
  link: string;
  kind: LinkClass;
  id?: string;
}

const { link, kind, id } = Astro.props;

const css = (() => {
  switch (kind) {
    case "outline":
      return "outline";
    default:
      return "";
  }
})();
---

<a href={link} class={css} id={id}><slot /></a>

<style>
  .outline {
    text-align: center;
    border: 2px solid var(--accent);
    border-radius: 0.5rem;
    padding: 0.5rem;
    transition: all 0.5s ease;
  }
</style>
