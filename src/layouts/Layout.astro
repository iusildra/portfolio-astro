---
import Footer from "../components/layout/Footer.astro";
import Header from "../components/layout/Header.astro";
import Favicon from "../images/favicon.svg";
import OpenGraph from "../images/opengraph.webp";
import config from "../config.json";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<script>
  import { sequencedTransitions } from "../utils/Transitions";

  const header = document.querySelector("header")!; // Select your sticky header
  const headerHeight = header.offsetHeight * 2;

  document.querySelectorAll("a[href^='#']").forEach((anchor) => {
    anchor.addEventListener("click", (e) => {
      e.preventDefault();
      const targetId = anchor.getAttribute("href")!.substring(1);
      const targetElement = document.getElementById(targetId);

      if (targetElement) {
        const elementPosition =
          targetElement.getBoundingClientRect().top + window.scrollY;
        const offsetPosition = elementPosition - headerHeight;

        window.scrollTo({ top: offsetPosition });
      }
    });
  });

  sequencedTransitions(
    document.querySelectorAll("#page-header > *")!,
    "appear",
  );
</script>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="My Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="all" />
    <meta property="og:title" content={config.index.title} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://iusildra.dev" />
    <meta
      property="og:image"
      content={`https://iusildra.dev${OpenGraph.src}`}
    />
    <meta
      property="og:description"
      content="Welcome to a visual hell.... I mean, my portfolio"
    />
    <link rel="icon" type="image/svg+xml" href={Favicon.src} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main>
      <section class="hero">
        <slot name="hero" />
      </section>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --tablet-width: 768px;
    --accent: #058c42;
    --accent-light: #16db65;
    --accent-dark: #04471c;
    --accent-very-dark: #0d2818;
    --background: #151515;
    --background-light: #3d3d3d;
    --text-color: #eee;
    --padding: 1rem;
    --header-height: calc(2rem + var(--padding) + 3.5px);

    h1 {
      font-size: 4rem;
      text-align: center;
    }
    h2 {
      font-size: 3rem;
    }
    h3 {
      font-size: 2rem;
    }

    h1,
    h2,
    h3 {
      font-weight: 700;
    }
  }

  .hero {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 2rem;

    min-height: calc(100vh - 2rem - 10 * var(--padding));

    margin: auto;
    padding: 4rem;

    border-bottom: 4px solid var(--accent);
  }

  html {
    font-family: system-ui, sans-serif;
    color: var(--text-color);
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    background: linear-gradient(
      to left bottom,
      var(--background),
      var(--background-light),
      var(--background)
    );
  }

  main {
    margin: auto;
    padding: var(--padding);
    width: 1024px;
    max-width: 75vw;
    font-size: 1.5rem;
  }

  a {
    color: var(--accent);
    text-decoration: none;
    transition: all 0.5s ease;

    &:hover {
      color: var(--accent-light);
      transform: scale(1.1);
    }
  }

  .anim-fade-translate {
    opacity: 0;
    transform: translateY(100%);
    transition:
      opacity 1s ease,
      transform 1s ease;

    &.appear {
      opacity: 1;
      transform: translateY(0);
    }
  }

  svg {
    width: var(--icon-size);
    height: var(--icon-size);
  }

  .flex {
    &.row {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      gap: var(--gap);
    }

    &.column {
      display: flex;
      flex-direction: column;
      gap: var(--gap);
    }

    &.center {
      justify-content: center;
      align-items: center;
    }
    &.with-basis {
      flex: 1 1 var(--flex-basis);
    }
  }
</style>
