---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Favicon from "../images/favicon.svg";
import OpenGraph from "../images/opengraph.webp";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="all" />
    <meta property="og:title" content="Lucas Nouguier's Portfolio" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://iusildra.dev" />
    <meta
      property="og:image"
      content={OpenGraph.src}
    />
    <meta
      property="og:description"
      content="Welcome to a visual hell.... I mean, my portfolio"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href={Favicon.src}
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <div class="hero">
      <slot name="hero" />
    </div>
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    --tablet-width: 768px;
    --accent: #058c42;
    --accent-light: #16db65;
    --accent-dark: #04471c;
    --accent-very-dark: #0d2818;
    --background: #151515;
    --background-light: #3d3d3d;
    --text-color: #eee;
    --padding: 1rem;

    h1 {
      font-size: 4rem;
    }
    h2 {
      font-size: 3rem;
    }
    h3 {
      font-size: 2rem;
    }

    h1,
    h2,
    h3 {
      font-weight: 700;
      line-height: 1;
    }

    #page-header {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
    }
  }

  html {
    font-family: system-ui, sans-serif;
    background: linear-gradient(
      to left bottom,
      var(--background),
      var(--background-light),
      var(--background)
    );
    color: var(--text-color);
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
  }

  main {
    margin: auto;
    padding: var(--padding);
    width: 800px;
    max-width: calc(100% - 4rem);
    font-size: 1.5rem;
    line-height: 1.6;
  }

  .hero {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 2rem;

    min-height: calc(100vh - 2rem - 10 * var(--padding));

    margin: auto;
    padding: 4rem;

    border-bottom: 4px solid var(--accent);
  }

  a {
    color: var(--accent);
    text-decoration: none;
    transition: all 0.5s ease;
  }
  a:hover {
    color: var(--accent-light);
  }
</style>
